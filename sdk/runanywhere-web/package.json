{
  "name": "@runanywhere/web-voice-sdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm build:core && pnpm build:packages",
    "build:core": "pnpm --filter '@runanywhere/core' build",
    "build:packages": "pnpm --filter '@runanywhere/cache' build && pnpm --filter '@runanywhere/workers' build && pnpm --filter '@runanywhere/monitoring' build && pnpm --filter '@runanywhere/llm' build && pnpm --filter '@runanywhere/transcription' build && pnpm --filter '@runanywhere/tts' build && pnpm --filter '@runanywhere/voice' build && pnpm --filter '@runanywhere/react' build",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
